                                                                                                                                                      #Modules Explained
                                                                                                                                                      
#The utils py file has all the code and the app.py is requesting for the code to use the algorithm

#utils.py file
def find_max(numbers):
    max_value = numbers[0]
    for number in numbers:
        if number > max_value:
            max_value = number
    return max_value

#app.py file
from utils import find_max

numbers = [10, 3, 6, 2]
max_value = find_max(numbers)
print(max_value)
